<%= form_with(model: task, local: true) do |f| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content %>
    </p>

    <p>
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status %>
    </p>
    
    <%= f.submit '登録' %>
<% end %>